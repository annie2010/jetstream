resource "aws_subnet" "public_<%= @az %>" {
  vpc_id = "${aws_vpc.main.id}"
  cidr_block = "<%= @get_next_cidr_block() %>"
  availability_zone = "<%= @az %>"

  tags {
	Name = "public_<%= @az %>"
  }
}

resource "aws_subnet" "private_<%= @az %>" {
  vpc_id = "${aws_vpc.main.id}"
  cidr_block = "<%= @get_next_cidr_block() %>"
  availability_zone = "<%= @az %>"

  tags {
	Name = "private_<%= @az %>"
  }
}

resource "aws_route_table_association" "public_<%= @az %>" {
  subnet_id = "${aws_subnet.public_<%= @az %>.id}"
  route_table_id = "${aws_route_table.public.id}"
}

resource "aws_route_table_association" "private_<%= @az %>" {
  subnet_id = "${aws_subnet.private_<%= @az %>.id}"
  route_table_id = "${aws_route_table.private_<%= @az %>.id}"
}
